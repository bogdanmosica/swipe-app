{
  "name": "remotion-composition-studio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/remotion-composition-studio/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/remotion-composition-studio"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "remotion:studio": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/remotion-composition-studio",
        "command": "npx remotion studio --log=verbose",
        "color": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/remotion-composition-studio/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  }
}